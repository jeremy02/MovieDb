<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieDb" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_dark</item>
        <item name="android:textSize">@dimen/font_nm</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.MovieDb.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MovieDb.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Customize styles -->
    <style name="Button">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Red">
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ClickableTextView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FloatingActionButton">
        <item name="borderWidth">0dp</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">0dp</item>
    </style>

    <style name="FloatingActionButton.Mini">
        <item name="android:backgroundTint">@color/white</item>
        <item name="fabSize">mini</item>
        <item name="tint">@color/blue</item>
    </style>

    <style name="FloatingActionButton.Normal">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="fabSize">normal</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="ImageView">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_placeholder_96</item>
    </style>

    <style name="MyTextAppearance">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="RecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="ScrollView">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="SearchView">
        <item name="android:background">@drawable/sv_primary</item>
        <item name="android:theme">@style/SearchViewTheme</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ToolbarTitleTextAppearance">
        <item name="android:fontFamily">@font/quantify</item>
        <item name="android:textSize">@dimen/font_lg</item>
        <item name="fontFamily">@font/quantify</item>
    </style>
</resources>